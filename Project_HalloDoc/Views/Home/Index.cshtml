@{
    ViewData["Title"] = "PatientDashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Request</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/PatientRequest.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/DarkMode.css" />
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
</head>
<body>
    <div class="container d-flex flex-column justify-content-between min-vh-100 ">
        <img class="float-right" onclick="toggleDarkMode()" id="d-mode" src="/images/dark.png" alt="dark">
        <div class="registration d-flex flex-column justify-content-center align-items-center">
            <a asp-controller="Home" asp-action="Index">
                <img id="logo" src="/images/logo.png" alt="logo">
            </a>

            <button onclick="location.href='@Url.Action("RequestScreen", "Patient")'" class="light-blue">Submit A Request</button>
            <button onclick="location.href='@Url.Action("Login", "Patient")'" class="dark-blue">Register Patients</button>
            <button onclick="location.href='@Url.Action("AdminLogin", "Admin")'" class="light-yellow">Admin</button>
        </div>
        <footer class="mb-3">Terms of Conditions | Privacy Policy</footer>
    </div>

    <script src="~/js/DarkMode.js"></script>
</body>
</html>