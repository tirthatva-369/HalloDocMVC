@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HalloDoc - Patient Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/a_patient_site.css" />


</head>

<body>

    <div class="container-fluid">
        <div class="row h-100 fixed-top p-5">
            <div class="col"></div>

            <div class="col">

                <!-- Logo Image -->
                <div class="row">
                    <img src="~/Images/logo.png" class="logo-image" alt="logo" />
                </div>

                <!-- Submit Request & Registered User Button -->
                <div class="row mt-5">
                    <div class="col-11 justify-content-center text-center">
                        <div class="d-grid gap-5 col-12 mx-auto my-5">
                            <button onclick="location.href='@Url.Action("b1_submit_request_screen", "Home")'" class="submit-request btn text-white btn-info btn-lg w-100">
                                Submit A Request
                            </button>
                            <button onclick="location.href='@Url.Action("b2_registered_user", "Home")'" class="registered-user btn btn-primary btn-lg w-100">
                                Registered User
                            </button>
                            <button onclick="location.href='@Url.Action("admin_login", "Admin")'" class="registered-user btn btn-dark btn-lg w-100">
                                Admin
                            </button>
                        </div>
                    </div>
                </div>

            </div>

            <div class="col">
                <img class="float-right light" role="button" id="d-mode" onclick="myFunction()" src="~/Images/dark.png" alt="" />
            </div>

        </div>
    </div>

    <footer class="fixed-bottom ">
        <!-- Footer -->
        <div class="row justify-content-center">
            <div class="col-5 text-right w-auto">
                <a class="link-opacity-100 link-underline link-underline-opacity-0 text-reset text-decoration-none" href="#">Terms of Conditions</a>
            </div>
            <div class="col-2 text-center w-auto">
                <p>|</p>
            </div>
            <div class="col-5 text-left w-auto">
                <a class="link-opacity-100 link-underline link-underline-opacity-0 text-reset text-decoration-none" href="#">Privacy Policy</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/custom.js"></script>


</body>
</html>