@*-------------------------modal--------------------*@
<div class="modal-dialog modal-dialog-centered">
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="background-color:#00B7FF ; color:white">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Create a New Request</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Here, I Want to create new request for...
                    <br />
                    <div class="d-flex justify-content-center gap-3 my-3">
                        <button class="modal-b back btn btn-outline-info me-3" id="button1" onclick="passId(event)">
                            <span class="">Me</span>
                        </button>
                        <button class="modal-b back btn btn-outline-info me-3" id="button2" onclick="passId(event)">
                            <span class="">Someone Else</span>
                        </button>
                    </div>
                </div>
                <div class="d-flex justify-content-end mb-3 me-3 gap-3">
                    <button id="continue" class="modal-b back btn btn-outline-info me-3" onclick="redirect()">
                        <span class="">Continue</span>
                    </button>
                    <button type="reset" class="modal-b back btn btn-outline-info me-3" data-bs-dismiss="modal">
                        <span class="">Cancel</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>