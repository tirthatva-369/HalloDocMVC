@using DataAccess.Models
@using DataAccess.Enums;

﻿@{
    ViewData["Title"] = "viewcase";
}

@model ViewCaseViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/AdminDashboard.css">
</head>

<body>
    @{
        var bgColor = "He";

        @if (Model.RequestTypeId == 1)
        {
            bgColor = "#60be5e";
        }
        else if (Model.RequestTypeId == 2)
        {
            bgColor = "#e69232";
        }
        else if (Model.RequestTypeId == 3)
        {
            bgColor = "#d76879";
        }
        else if (Model.RequestTypeId == 4)
        {
            bgColor = "#0b7ebf";
        }
    }

    <div class=" container-fluid  bg-body-tertairy">
        <!-- main part -->
        <div class="container flex-column bg-body-dark d-flex align-items-center justify-content-center">

            <!--title and back  -->
            <div class="row d-flex align-items-center justify-content-around w-100 my-3">
                <div class="col-6 d-flex justify-content-start">
                    <p class="d-flex">
                        <span class="fw-bold fs-4"> View Reservation</span>
                        <span class="text-white boder rounded p-1 mx-2" style="background-color:@bgColor">@Model.Requesttype</span>
                    </p>
                </div>
                <div class="col-6 d-flex justify-content-end">
                    <div class="col-6 d-flex justify-content-end">
                        <button onclick="location.href='@Url.Action("admin_dashboard", "Admin")'" type="button" class="back btn btn-outline-info">
                            &lt&nbspBack
                        </button>
                    </div>
                </div>

                <div class="p-3 rounded-4 shadow mb-3 ">

                    <!--Form-->
                    <form method="post">

                        <!-- Patient Information  -->
                        <h3>Patient Information</h3>

                        <p class="mb-0">Confirmation Number</p>
                        <div class="h5 text-info mb-4">@Model.ConfirmationNumber</div>
                        <!-- text-area  -->
                        <div class="form-floating">
                            <textarea class="form-control h-75" asp-for="Notes" id="floatingTextarea" disabled></textarea>
                            <label for="floatingTextarea" value="Fever">
                                <span class="text-tertiary"> Enter brief details symptoms(optional)</span>
                            </label>
                        </div>

                        <hr class="mt-4" />

                        <div class="row g-1 ">
                            <div class="form-floating my-3 col-12 col-md-6">
                                <input type="text" asp-for="Firstname" class="form-control " id="floatingInput" placeholder="first name" disabled>
                                <label for="floatingInput"><span class="text-tertiary ">First Name</span></label>
                            </div>
                            <div class="form-floating my-3 col-12 col-md-6">
                                <input type="text" asp-for="Lastname" class="form-control" id="floatingInput" placeholder="last name" disabled>
                                <label for="floatingInput"><span class="text-tertiary ">Last Name</span></label>
                            </div>

                            <div class="form-floating col-12 col-md-6">
                                <input type="date" asp-for="DateOfBirth" class="form-control" id="floatingInput" placeholder="DOB" disabled>
                                <label for="floatingInput"><span class="text-tertiary "> Date of birth</span></label>
                            </div>
                            <div class="form-floating mb-3 col-10 col-md-5 ">
                                <input type="tel" asp-for="Phonenumber" class=" form-control bg-transparent " id="floatingInput " disabled>
                                <label for="floatingInput"><span class="text-tertiary "> Contact  </span></label>

                            </div>
                            <div class="form-floating col-2 col-md-1">
                                <button class="back btn btn-outline-info p-3"><i class="bi bi-telephone text-secondary"></i></button>
                            </div>

                            <div class="form-floating mb-3 col-12 col-sm-6">
                                <input type="email" asp-for="Email" class="form-control bg-transparent emailInp" id="floatingInput1" disabled>
                                <label for="floatingInput" class="ms-2 ">Email</label>
                            </div>
                            <div class=" col-12 col-sm-6"></div>
                        </div>

                        <!-- Patient Location  -->
                        <h3 class="mt-3">Patient Location</h3>
                        <div class="row d-flex justify-content-center g-1 ">
                            <div class="form-floating m- col-md-6 col-12">
                                <input type="text" asp-for="RegionName" class="form-control" id="floatingInput" placeholder="Region" disabled>
                                <label for="floatingInput"><span class="text-tertiary ">Region</span></label>
                            </div>
                            <div class="form-floating mb-3 col-10 col-md-5 ">
                                <input type="tel" asp-for="Address" class=" form-control bg-transparent " id="floatingInput" disabled>
                                <label for="floatingInput" class="ms-2 ">Address</label>
                            </div>
                            <div class="form-floating col-2 col-md-1">
                                <button class="back btn btn-outline-info p-3"><i class="bi bi-map text-secondary "></i></button>
                            </div>
                            <div class="form-floating mb-3 col-12 col-sm-6">
                                <input type="text" asp-for="Room" class="form-control bg-transparent emailInp" id="floatingInput1" disabled>
                                <label for="floatingInput" class="ms-2 ">Room#</label>
                            </div>
                            <div class=" col-12 col-sm-6"></div>
                        </div>

                        <div class=" d-flex justify-content-end pe-3 ">
                            <button type="button" class="back btn btn-outline-info btn-sm px-4 py-2 me-2">Assign</button>
                            <a asp-action="ViewNote" asp-controller="Admin" asp-route-requestId="@Model.RequestId">
                                <button type="button" class="back btn btn-outline-info btn-sm px-4 py-2 me-2">View Notes</button>
                            </a>
                            <button type="button" class="btn btn-outline-danger btn-sm px-4 py-2 me-2">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
</body>
</html>