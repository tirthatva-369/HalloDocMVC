﻿@using DataAccess.Models
@model ViewUploadModel;

<style>
    #downloadSelected {
        color: rgb(0, 183, 255);
        background-color: white;
        border: 1px solid rgb(0, 183, 255);
        border-radius: 5px;
    }

        #downloadSelected:hover {
            background-color: rgb(0, 183, 255);
            color: white;
        }
</style>

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
<link rel="stylesheet" href="/css/bootstrap.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/dark-mode.css" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
        crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
<link rel="stylesheet" href="~/css/PatientDashboard.css">

<body class="bg-light">
    <div class="container mt-5 mb-3 bg-light">

        <div class="d-flex justify-content-between mb-4">
            <h2>Close Case</h2>
            <button onclick="location.href='@Url.Action("AdminDashboard", "Admin")'" id="back-btn">&lt; Back</button>
        </div>
        <div class="container bg-white shadow rounded-3 px-4 pt-2 pb-2">
            <div class="row">
                <p class="col-12 mb-0">Patient Name</p>
                <p class="col-12">
                    <span class="fw-bolder fs-4 text-info">@Model.firstName @Model.lastName </span>
                    <span>(NY210303FNLN0369)</span>
                    <button class="btn btn-outline-info p-2 back float-end">Create Invoice Through Quick</button>
                </p>
                <p class="fw-bolder fs-4 mb-0 pb-0">Documents</p>
            </div>
        </div>


        <div class="table-responsive mt-3">
            <table class="table dataTable table-hover" id="data-table" aria-describedby="data-table_info">
                <thead>
                    <tr>
                        <th class="sorting" data-value="Description">
                            File
                        </th>

                        <th>
                            Upload Date<i class="bi bi-arrow-up-short"></i>
                        </th>
                        <th>
                            Actions
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.files.Count > 0)
                    {
                        @foreach (var item in Model.files)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" name="selectedFiles" value="@item.Filename">
                                </td>

                                <td>
                                    <i class="bi bi-file-earmark-fill" style="color:red"></i>
                                    @item.Filename
                                </td>

                                <td>@item.Createddate.ToString("MMM dd, yyyy")</td>
                                <td>

                                    <a href="~/UploadedFiles/@item.Filename" class="btn px-2 py-1 btn-outline-info shadow-none night-mode-btn" download>
                                        <i class="bi bi-cloud-download"></i>
                                    </a>
                                    <a class="btn ms-2 px-2 py-1 btn-outline-info shadow-none night-mode-btn" asp-controller="Admin" asp-action="DeleteFileById" asp-route-id="@item.Requestwisefileid">
                                        @*onclick="deleteFile(@item.Requestwisefileid)"*@
                                        <i class="bi bi-trash"></i>
                                    </a>

                                </td>
                            </tr>

                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" style="text-align: center;">No records found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <form method="post" asp-action="UploadFiles" asp-controller="Admin" class="input-group my-5 mt-3 rounded-3 shadow p-3 bg-white  " enctype="multipart/form-data">
            <div class="row">
                <h5 class="col-12">Patient Information</h5>

                <div class="col-6">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInputDisabled" placeholder="name" disabled>
                        <label for="floatingInputDisabled">First Name</label>
                    </div>
                </div>
                <div class="col-6">
                    <div class="input-div form-floating mb-3">
                        <input type="text" class="form-control" id="floatingInput" placeholder="name" disabled>
                        <label for="floatingInput">Last Name</label>
                    </div>
                </div>
                <div class="col-6">
                    <div class="input-div form-floating mb-3">
                        <input type="date" class="form-control" id="floatingInput" placeholder="name@example.com" disabled>
                        <label for="floatingInput">Date Of Birth</label>
                    </div>
                </div>
                <div class="col-5">
                    <div class="input-div form-floating mb-3">
                        <input type="tel" name="phone" class="form-control p-3 ps-5" placeholder="name" id="floatingInput" disabled>
                        <label for="floatingInput">Phone Number</label>
                    </div>
                </div>
                <div class="col-1">
                    <div class="form-floating mb-3">
                        <button type="button" class="btn btn-outline-info back px-4 float-right me-0" style="height:3.4rem;"><i class="bi bi-telephone"></i></button>
                    </div>
                </div>
                <div class="col-6">
                    <div class="input-div form-floating mb-3">
                        <input name="email" type="email" class="form-control" id="email" placeholder="name@example.com" disabled>
                        <label for="floatingInput">Email</label>
                    </div>
                </div>
            </div>

            <div class="col d-flex w-auto justify-content-end">
                <button role="button" class="back btn btn-outline-info py-2 px-4 w-auto" id="editButton">
                    Edit
                </button>

                <button class="back btn btn-outline-info py-2 px-4 ms-3 w-auto" type="submit" id="saveButton">
                    Close Case
                </button>
            </div>
        </form>

    </div>
</body>
<script>
    function toggleCheckboxes() {
        var checkboxes = document.getElementsByName('selectedFiles');
        var selectAllCheckbox = document.getElementById('selectAll');

        for (var i = 0; i < checkboxes.length; i++) {
            checkboxes[i].checked = selectAllCheckbox.checked;
        }
    }

    function downloadSelectedFiles() {
        var selectedFiles = [];
        var checkboxes = document.getElementsByName('selectedFiles');

        for (var i = 0; i < checkboxes.length; i++) {
            if (checkboxes[i].checked) {
                selectedFiles.push(checkboxes[i].value);
            }
        }

        // If no files are selected, return
        if (selectedFiles.length === 0) {
            alert('Please select at least one file to download.');
            return;
        }

        // Construct URLs for all selected files and initiate download
        for (var j = 0; j < selectedFiles.length; j++) {

            var fileUrl = '/UploadedFiles/' + selectedFiles[j];
            var link = document.createElement('a');
            link.href = fileUrl;
            link.setAttribute('download', ''); // This attribute triggers the download
            link.click(); // Simulate a click event to initiate the download
        }

    }

    function deleteAllFiles() {
        var selectedFiles = [];
        var checkboxes = document.getElementsByName('selectedFiles');

        for (var i = 0; i < checkboxes.length; i++) {
            if (checkboxes[i].checked) {
                selectedFiles.push(checkboxes[i].value);
            }
        }

        // If no files are selected, return
        if (selectedFiles.length === 0) {
            alert('Please select at least one file to Delete.');
            return;
        }

        var confirmDelete = confirm("Are you sure you want to delete all selected files?");
        if (!confirmDelete) {
            return;
        }
        deleteSelectedFiles(selectedFiles);

    }

    function deleteSelectedFiles(selectedFiles) {
        $.ajax({
            url: '/Admin/DeleteAllFiles',
            type: 'POST',
            data: { selectedFiles: selectedFiles },
            success: function (response) {
                window.location.reload();
            }
        });
    }

    function sendMail() {
        debugger;
        var selectedFiles = [];
        var checkboxes = document.getElementsByName('selectedFiles');

        for (var i = 0; i < checkboxes.length; i++) {
            if (checkboxes[i].checked) {
                selectedFiles.push(checkboxes[i].value);
            }
        }

        // If no files are selected, return
        if (selectedFiles.length === 0) {
            alert('Please select at least one file to Send.');
            return;
        }

        var confirmDelete = confirm("Are you sure you want to send all selected files?");
        if (!confirmDelete) {
            return;
        }

        sendSelectedFiles(selectedFiles);
    }
    function sendSelectedFiles(selectedFiles) {
        $.ajax({
            url: '/Admin/SendAllFiles',
            type: 'POST',
            data: { selectedFiles: selectedFiles },
            success: function (response) {
                window.location.reload();
            }
        });
    }

</script>